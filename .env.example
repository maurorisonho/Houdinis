# Environment variables for Houdinis with LangChain + MCP
# Copy this file to .env and fill in your API keys

# ============================================================
# AI/LLM API Keys
# ============================================================

# OpenAI API Key (for GPT-4, GPT-3.5-turbo, etc.)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LangSmith (optional - for tracing and monitoring)
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=houdinis-quantum-crypto

# ============================================================
# Quantum Computing Backends
# ============================================================

# IBM Quantum
IBM_QUANTUM_TOKEN=your-ibm-quantum-token-here
IBM_QUANTUM_HUB=ibm-q
IBM_QUANTUM_GROUP=open
IBM_QUANTUM_PROJECT=main

# AWS Braket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Azure Quantum
AZURE_QUANTUM_RESOURCE_ID=your-azure-resource-id
AZURE_QUANTUM_LOCATION=eastus

# ============================================================
# MCP Configuration
# ============================================================

MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_LOG_LEVEL=INFO

# ============================================================
# Database Configuration
# ============================================================

# ChromaDB
CHROMA_SERVER_AUTH_CREDENTIALS=houdinis_token
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================
# Security Settings
# ============================================================

# JWT Secret for API authentication
JWT_SECRET=your-very-secure-random-secret-key-here

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================
# Application Settings
# ============================================================

# Environment (development/production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================
# NVIDIA GPU Settings
# ============================================================

NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ============================================================
# Network Configuration
# ============================================================

# Target system for testing (vulnerable container)
TARGET_HOST=target
TARGET_PORT=22,80,443
